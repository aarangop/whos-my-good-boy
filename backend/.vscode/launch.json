  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app", "--reload"],
      "jinja": true
    },
    {
      "name": "Unit Tests Only",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-v", "-m", "not integration"],
      "justMyCode": true
    },
    {
      "name": "Integration Tests Only",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-v", "-m", "integration"],
      "justMyCode": true
    },
    {
      "name": "All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-v"],
      "justMyCode": true
    }
  ]
}
